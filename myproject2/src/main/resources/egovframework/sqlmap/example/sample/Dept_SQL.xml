	<insert id="deptDAO.InsertDept" >
			INSERT INTO DEPT 
				( DEPTNO
				  , DNAME
				  , LOC )
			VALUES ( #deptno#
				  , #dname#
				  , #loc# )
	</insert>

	<select id="deptDAO.SelectDeptList" resultClass="egovMap">
			SELECT 
				DEPTNO
				, DNAME
				, LOC 
			FROM DEPT
	</select>
	
	<select id="deptDAO.selectDeptDetail" resultClass="deptVO">
			SELECT
				DEPTNO
				, DNAME
				, LOC
			FROM DEPT
			WHERE DEPTNO=#deptno#
	</select>
	
	<delete id="deptDAO.deleteDept">
		DELETE 
		FROM DEPT 
		WHERE DEPTNO=#deptno#
	</delete>
	
